[flake8]
max-line-length = 140
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    dist,
    build,
    .venv,
    .tox,
    *.egg-info
per-file-ignores =
    # Imported but unused
    __init__.py: F401
    # Tests often use assertions that look like comparisons to True/False
    tests/*: E712, E402
